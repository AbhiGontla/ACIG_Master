@model ACIGConsumer.Models.Home.BannerModel
@{
    ViewData["Title"] = "Banners";
    Layout = "~/Views/Shared/_Layouten.cshtml";
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-3 py-lg-8 subheader-transparent" id="kt_subheader">
        <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">
                <!--begin::Mobile Toggle-->
                <button class="burger-icon burger-icon-left mr-4 d-inline-block d-lg-none" id="kt_subheader_mobile_toggle">
                    <span></span>
                </button>
                <!--end::Mobile Toggle-->
                <!--begin::Page Heading-->
                <div class="d-flex align-items-baseline mr-5">
                    <!--begin::Page Title-->
                    <h2 class="subheader-title text-white font-weight-bold my-2 mr-3">Banners</h2>
                    <!--end::Page Title-->
                </div>
                <!--end::Page Heading-->
            </div>
            <!--end::Info-->
            <!--begin::Toolbar-->
            <div class="d-flex align-items-center">
                <!--begin::Button-->
                <a href="/policy/index?lang=en" class="btn btn-fh btn-white btn-hover-primary font-weight-bold px-2 px-lg-5 mr-2">
                    Back
                </a>
                <!--end::Button-->
            </div>
            <!--end::Toolbar-->
        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Card-->

    <div class="card card-custom card-shadowless rounded-top-0">
        <div class="card-body p-0">
            <div class="row justify-content-center px-8 px-lg-10">
                <div class="col-xl-12 col-xxl-7">
                    <!--begin: Wizard Form-->
                    <form class="form mt-0 mt-lg-10" asp-controller="Home" asp-action="Banner" method="post" id="kt_form">
                        <!--begin: Wizard Step 1-->
                        <div class="pb-5" data-wizard-type="step-content" data-wizard-state="current">
                            <div class="form-group row">
                                <label class="col-xl-3 col-lg-3 col-form-label text-right">Image</label>
                                <div class="col-lg-9 col-xl-6">
                                    <div class="image-input image-input-empty image-input-outline" id="kt_image_5" style="background-image: url(assets/media/users/blank.png)">
                                        <div class="image-input-wrapper"></div>
                                        <label class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="change" data-toggle="tooltip" title="" data-original-title="Change avatar">
                                            <i class="fa fa-pen icon-sm text-muted"></i>
                                            <input type="file" asp-for="Image" accept=".png, .jpg, .jpeg" />
                                        </label>
                                        <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="cancel" data-toggle="tooltip" title="Cancel avatar">
                                            <i class="ki ki-bold-close icon-xs text-muted"></i>
                                        </span>
                                        <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="remove" data-toggle="tooltip" title="Remove avatar">
                                            <i class="ki ki-bold-close icon-xs text-muted"></i>
                                        </span>
                                    </div>
                                    <span class="form-text text-muted">Minimum Size 720 x 1024</span>
                                </div>
                            </div>

                            <!--begin::Input-->
                            <div class="row">
                                <div class="col-xl-6 form-group">
                                    <label>Banner Name</label>
                                    <input type="text" class="form-control form-control-solid form-control-lg" asp-for="Name" placeholder="Banner Name" />
                                    <span class="form-text text-muted">Please enter your banner name.</span>
                                </div>
                                <div class="col-xl-6 form-group">
                                    <label>Priority</label>
                                    <input type="number" class="form-control form-control-solid form-control-lg" asp-for="priority" placeholder="Priority" />
                                    <span class="form-text text-muted">Please enter order of banner.</span>
                                </div>
                            </div>
                            <!--end::Input-->
                            <!--begin::Input-->
                            <div class="form-group">
                                <label>Description</label>
                                <input type="text" class="form-control form-control-solid form-control-lg" asp-for="Description" placeholder="Description" value="Wick" />
                                <span class="form-text text-muted">Please enter Description.</span>
                            </div>
                            <div class="form-group">
                                <label>Type</label>
                                <select class="form-control form-control-solid form-control-lg" asp-for="Type">
                                    <option value="">select type</option>
                                    <option value="home">Home banner</option>
                                    <option value="medical">Medical banner</option>
                                </select>
                            </div>
                            <!--end::Input-->
                        </div>
                        <!--begin: Wizard Actions-->
                        <div class="d-flex justify-content-between border-top mt-5 pt-10" style="margin-bottom:3%;">
                            <div>
                                <button type="button" id="btnbanner_submit" class="btn btn-primary font-weight-bold text-uppercase px-9 py-4" data-wizard-type="action-next">Submit</button>
                            </div>
                            <div></div>
                            <div></div>
                        </div>
                        <!--end: Wizard Actions-->
                    </form>
                    <!--end: Wizard Form-->
                </div>
            </div>
        </div>
    </div>
    <!--end::Card-->
</div>

<script src="assets/plugins/global/plugins.bundle.js?v=7.0.4"></script>
<script src="assets/plugins/custom/prismjs/prismjs.bundle.js?v=7.0.4"></script>
<script src="assets/js/scripts.bundle.js?v=7.0.4"></script>
<!--end::Global Theme Bundle-->
<!--begin::Page Scripts(used by this page)-->
<script src="~/assets/js/pages/crud/ajaxSubmit/ajax-submit.js"></script>
<script src="~/assets//Custom/js/Home/banner.js"></script>
<!--end::Page Scripts-->
