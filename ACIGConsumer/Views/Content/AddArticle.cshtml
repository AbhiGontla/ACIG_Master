@model ACIGConsumer.Models.Content.ArticlesModel
@{
    ViewData["Title"] = "AddArticle";
    Layout = "~/Views/Shared/_Layouten.cshtml";
}


<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-3 py-lg-8 subheader-transparent" id="kt_subheader">
        <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">
                <!--begin::Mobile Toggle-->
                <button class="burger-icon burger-icon-left mr-4 d-inline-block d-lg-none" id="kt_subheader_mobile_toggle">
                    <span></span>
                </button>
                <!--end::Mobile Toggle-->
                <!--begin::Page Heading-->
                <div class="d-flex align-items-baseline mr-5">
                    <!--begin::Page Title-->
                    <h2 class="subheader-title text-white font-weight-bold my-2 mr-3">Banners</h2>
                    <!--end::Page Title-->
                </div>
                <!--end::Page Heading-->
            </div>
            <!--end::Info-->
            <!--begin::Toolbar-->
            <div class="d-flex align-items-center">
                <!--begin::Button-->
                <a href="/policy/index?lang=en" class="btn btn-fh btn-white btn-hover-primary font-weight-bold px-2 px-lg-5 mr-2">
                    Back
                </a>
                <!--end::Button-->
            </div>
            <!--end::Toolbar-->
        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Card-->

    <div class="card card-custom card-shadowless rounded-top-0">
        <div class="card-body p-0">
            <div class="row justify-content-center px-8 px-lg-10">
                <div class="col-xl-12 col-xxl-7">
                    <!--begin: Wizard Form-->
                    <form class="form mt-0 mt-lg-10" asp-controller="Home" asp-action="Banner" method="post" id="kt_form">
                        <!--begin: Wizard Step 1-->
                        <div class="pb-5" data-wizard-type="step-content" data-wizard-state="current">

                            <!--begin::Input-->
                            <div class="row">
                                <div class="col-xl-6 form-group">
                                    <label>Title</label>
                                    <input type="text" class="form-control form-control-solid form-control-lg" asp-for="Title" placeholder="Banner Name" />
                                    <span class="form-text text-muted">Please enter your banner name.</span>
                                </div>
                                <div class="col-xl-6 form-group">
                                    <label>Type</label>
                                    <input type="number" class="form-control form-control-solid form-control-lg" asp-for="Type" placeholder="Priority" />
                                    <span class="form-text text-muted">Please enter order of banner.</span>
                                </div>
                            </div>
                            <!--end::Input-->
                            <!--begin::Input-->
                            <div class="form-group">
                                <label>Description</label>
                                <input type="text" class="form-control form-control-solid form-control-lg" asp-for="Content" placeholder="Description" value="Wick" />
                                <span class="form-text text-muted">Please enter Description.</span>
                            </div>
                            <!--end::Input-->
                        </div>
                        <!--begin: Wizard Actions-->
                        <div class="d-flex justify-content-between border-top mt-5 pt-10">
                            <div>
                                <button type="button" id="btnbanner_submit" class="btn btn-primary font-weight-bold text-uppercase px-9 py-4" data-wizard-type="action-next">Submit</button>
                            </div>
                        </div>
                        <!--end: Wizard Actions-->
                    </form>
                    <!--end: Wizard Form-->
                </div>
            </div>
        </div>
    </div>
    <!--end::Card-->
</div>

<script src="assets/plugins/global/plugins.bundle.js?v=7.0.4"></script>
<script src="assets/plugins/custom/prismjs/prismjs.bundle.js?v=7.0.4"></script>
<script src="assets/js/scripts.bundle.js?v=7.0.4"></script>
<!--end::Global Theme Bundle-->
<!--begin::Page Scripts(used by this page)-->
<script src="~/assets/js/pages/crud/ajaxSubmit/ajax-submit.js"></script>
<script src="~/assets//Custom/js/Home/banner.js"></script>
<!--end::Page Scripts-->
