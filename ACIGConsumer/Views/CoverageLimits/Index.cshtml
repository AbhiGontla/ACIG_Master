@model IEnumerable<Core.Api.CoverageBalance>
@{
    ViewData["Title"] = "Index";

}
@{
    if (ViewBag.lang == "en")
    {
        Layout = "_Layouten";

        <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
            <!--begin::Subheader-->
            <div class="subheader py-3 py-lg-8 subheader-transparent" id="kt_subheader">
                <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
                    <!--begin::Info-->
                    <div class="d-flex align-items-center flex-wrap mr-1">
                        <!--begin::Mobile Toggle-->
                        <button class="burger-icon burger-icon-left mr-4 d-inline-block d-lg-none" id="kt_subheader_mobile_toggle">
                            <span></span>
                        </button>
                        <!--end::Mobile Toggle-->
                        <!--begin::Page Heading-->
                        <div class="d-flex align-items-baseline mr-5">
                            <!--begin::Page Title-->
                            <h2 class="subheader-title text-white font-weight-bold my-2 mr-3">Used and Avaliable Limits</h2>
                            <!--end::Page Title-->
                        </div>
                        <!--end::Page Heading-->
                    </div>
                    <!--end::Info-->
                </div>
            </div>
            <!--end::Subheader-->
            <!--begin::Entry-->
            <div class="d-flex flex-column-fluid">
                <!--begin::Container-->
                <div class="container">
                    <div class="card card-custom gutter-b">
                        <!--begin::Body-->
                        <div class="card-body py-0">
                            <!--begin::Table-->
                            <div class="table-responsive">
                                <table class="table table-head-custom table-vertical-center" id="kt_advance_table_widget_3">
                                    <thead>
                                        <tr class="text-left text-uppercase">
                                            <th class="pl-0" style="width: 20px">
                                                <label class="checkbox checkbox-lg checkbox-single mr-2">
                                                    <input type="checkbox" value="1">
                                                    <span></span>
                                                </label>
                                            </th>
                                            <th class="px-0" style="width: 50px"><a class="text-dark-75 font-weight-bolder  mb-1 font-size-lg">Speciality</a></th>
                                            <th style="min-width: 120px"></th>
                                            <th style="min-width: 100px; padding: 0px;"><a class="text-dark-75 font-weight-bolder  mb-1 font-size-lg">Used</a></th>
                                            <th class="text-info" style="min-width: 100px; padding: 0px;"><a class="text-dark-75 font-weight-bolder  mb-1 font-size-lg">Avl.limit</a></th>
                                            <th style="min-width: 170px;"><a class="text-dark-75 font-weight-bolder  mb-1 font-size-lg">Status</a></th>
                                            <th class="pr-0" style="min-width:68px"><a class="text-dark-75 font-weight-bolder  mb-1 font-size-lg">Action</a></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if(Model != null && Model.Count() == 0)
                                        {
                                            <tr><td colspan="7">No Records</td></tr>
                                        }
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="pl-0 py-7">
                                                    <label class="checkbox checkbox-lg checkbox-single">
                                                        <input type="checkbox" value="1">
                                                        <span></span>
                                                    </label>
                                                </td>
                                                <td class="pl-0">
                                                    <div class="symbol symbol-50 symbol-light mt-1">
                                                        <span class="symbol-label">
                                                            <img src="assets/media/svg/avatars/001-boy.svg" class="h-75 align-self-end" alt="">
                                                        </span>
                                                    </div>
                                                </td>
                                                <td class="pl-0">
                                                    <a class="text-dark-75 font-weight-bolder  mb-1 font-size-lg">@item.Description</a>
                                                    <span class="text-muted font-weight-bold text-muted d-block">@item.Code</span>
                                                </td>
                                                <td class="pl-0">

                                                    @{
                                                        int limit = @Convert.ToInt32(item.Limit);
                                                        int remainlimit = @Convert.ToInt32(item.RemainingAmount);
                                                        int usedamount = limit - remainlimit;
                                                        <span class="text-dark-75 font-weight-bolder mb-1 font-size-lg">@usedamount SAR</span>
                                                    }

                                                </td>
                                                <td class="pl-0">
                                                    <span class="text-dark-75 font-weight-bolder d-block font-size-lg">@item.RemainingAmount SAR</span>
                                                    <span class="text-muted font-weight-bold text-muted d-block"></span>
                                                </td>
                                                <td>
                                                    @{
                                                        decimal lmit = @Convert.ToDecimal(item.Limit);
                                                        decimal remlmit = @Convert.ToDecimal(item.RemainingAmount);
                                                        decimal a = lmit / remlmit;
                                                        int b = Convert.ToInt32(a * 100);
                                                        int res = 100 - b;
                                                        <div class="d-flex flex-column w-100 mr-2">
                                                            <div class="d-flex align-items-center justify-content-between mb-2">
                                                                <span class="text-muted mr-2 font-size-sm font-weight-bold">@res%</span>
                                                                <span class="text-muted font-size-sm font-weight-bold">progress</span>
                                                            </div>
                                                            <div class="progress progress-xs w-100">
                                                                <div class="progress-bar bg-danger" role="progressbar" style="width: @res%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                                            </div>
                                                        </div>
                                                    }



                                                </td>
                                                <td class="pr-0 ">
                                                    <a href="/CoverageLimits/Details/@item.Id?lang=en" class="btn btn-light-success font-weight-bolder font-size-sm">View</a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                            <!--end::Table-->
                        </div>
                        <!--end::Body-->
                    </div>
                </div>
            </div>
        </div>
    }
