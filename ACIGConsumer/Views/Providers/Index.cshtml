                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="text-dark-75 font-weight-bolder  mb-1 font-size-lg">@item.ProviderNumber</span>
                                                </td>
                                                <td class="pl-0 py-8">
                                                    <div class="d-flex align-items-center">
                                                        <div class="symbol symbol-50 symbol-light mr-4">
                                                            <span class="symbol-label">
                                                                <img src="assets/media/svg/avatars/001-boy.svg" class="h-75 align-self-end" alt="">
                                                            </span>
                                                        </div>
                                                        <div>
                                                            @{

                                                                string posternameShort = "";

                                                                if (item.ProviderName.Contains("-"))
                                                                {
                                                                    posternameShort = item.ProviderName.Substring(0, item.ProviderName.IndexOf("-"));
                                                                }

                                                            }
                                                            <a href="#" class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">@posternameShort</a>
                                                            <span class="text-muted font-weight-bold d-block"> Phone- <span class="text-dark font-weight-light ">123456789</span></span>
                                                            <span class="text-muted font-weight-bold d-block"> CCHI- <span class="text-dark font-weight-light ">@item.CCHINumber</span></span>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>

                                                    @{
                                                        string provtype = "";
                                                        if (item.ProviderType == "RAD")
                                                        {
                                                            provtype = "RADIOLOGY";
                                                        }
                                                        else if (item.ProviderType == "TPA")
                                                        {
                                                            provtype = "THIRD PARTY ADMINISTRATOR";
                                                        }
                                                        else if (item.ProviderType == "CLN")
                                                        {
                                                            provtype = "CLINIC";
                                                        }
                                                        else if (item.ProviderType == "DEN")
                                                        {
                                                            provtype = "DENTIST";
                                                        }
                                                        else if (item.ProviderType == "DIS")
                                                        {
                                                            provtype = "DISPENSARY";
                                                        }
                                                        else if (item.ProviderType == "DOC")
                                                        {
                                                            provtype = "DOCTOR";
                                                        }
                                                        else if (item.ProviderType == "HOS")
                                                        {
                                                            provtype = "HOSPITAL";
                                                        }
                                                        else if (item.ProviderType == "MDC")
                                                        {
                                                            provtype = "MEDICAL CENTER";
                                                        }
                                                        else if (item.ProviderType == "PHR")
                                                        {
                                                            provtype = "PHARMACY";
                                                        }
                                                        else if (item.ProviderType == "PLY")
                                                        {
                                                            provtype = "POLYCLINIC";
                                                        }
                                                        else if (item.ProviderType == "PVT")
                                                        {
                                                            provtype = "PRIVATE CLINIC";
                                                        }
                                                        else if (item.ProviderType == "REM")
                                                        {
                                                            provtype = "REIMBURSEMENT";
                                                        }
                                                    }
                                                    <span class="text-dark-75 font-weight-bolder d-block font-size-lg mb-5">@provtype</span>
                                                </td>
                                                <td>
                                                    @{

                                                        string stringAfterChar = "";

                                                        if (item.ProviderName.Contains("-"))
                                                        {
                                                            stringAfterChar = item.ProviderName.Substring(item.ProviderName.IndexOf("-") + 2);
                                                        }

                                                    }
                                                    <span class="text-dark-75 font-weight-bolder d-block mb-5 font-size-lg">@stringAfterChar</span>
                                                </td>
                                                <td class="pr-0 text-left">
                                                    <a href="/providers/details/@item.ProviderNumber?lang=en" class="btn btn-sm btn-light-info font-weight-bolder font-size-sm">View</a>
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!--end::Table-->
                        </div>
                        <!--end::Body-->
                    </div>

                </div>
                <!--end::Container-->
            </div>
            <!--end::Entry-->
        </div>
