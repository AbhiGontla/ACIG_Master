                        </div>
                        <h4 class="subheader-title text-white  font-weight-bold my-2 mr-3"></h4>
                        <!--end::Separator-->

                    </div>
                    <!--end::Details-->
                    <!--begin::Toolbar-->
                    <div class="d-flex align-items-center">
                        <!--begin::Button-->
                        <a href="#" class=""></a>
                        <!--end::Button-->
                        <!--begin::Button-->
                        <!--end::Button-->
                        <!--begin::Dropdown-->
                        <!--end::Dropdown-->
                    </div>
                    <!--end::Toolbar-->
                </div>
            </div>
            <!--end::Subheader-->
