                                        <tr class="text-left text-uppercase">
                                            <th style="min-width: 50px"><span class="text-dark-75 font-weight-bolder  mb-1 font-size-lg">ID</span></th>
                                            <th style="min-width: 250px" class="pl-7">
                                                <span class="text-dark-75 font-weight-bolder  mb-1 font-size-lg">Name</span>
                                            </th>
                                            <th style="min-width: 150px"><span class="text-dark-75 font-weight-bolder  mb-1 font-size-lg">Type</span></th>
                                            <th style="min-width: 50px"><span class="text-dark-75 font-weight-bolder  mb-1 font-size-lg">Location</span></th>
                                            <th style="min-width: 50px"><span class="text-dark-75 font-weight-bolder  mb-1 font-size-lg">Action</span></th>

                                        </tr>
                                    </thead>
